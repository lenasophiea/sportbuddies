  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon" data-user-id="<%= current_user && current_user.id %>">
    <%= link_to "/sports#index", class: "navbar-brand" do %>
      <%= image_tag "logo.jpg" %><span class="puppy-title text-warning">SportsBuddy</span>
      <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="d-flex nav-item dropdown">
            <%= link_to "Messages", conversations_path , class: "nav-link" %>
            <% if Conversation.unread_messages(current_user.id).count >= 1 %>
            <div id="notification-count" class="notification-count"> <%= Conversation.unread_messages(current_user.id).count %> </div>
          </li>
          <% end %>
          <li class="nav-item active">
            <%= link_to "Home", "/sports#index", class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "https://images.unsplash.com/photo-1547354142-526457358bb7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Login", user_session_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
