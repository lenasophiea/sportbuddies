<div class="container-message">
  <% if @conversations.length >= 1 %>
      <% @conversations.each do |conversation| %>
        <div class="conversation-card border">
          <% if current_user.id == conversation.sender.id %>
          <div class="row">
            <div class="col-2 d-flex align-items-center">
              <div class="conversation-card-avatar">
                <%= link_to buddy_request_profile_path(conversation.buddy_request_id, conversation.receiver) do %>
                 <%= cl_image_tag conversation.receiver.photo.key, class: "avatar" %>
                <% end %>
              </div>
            </div>
            <div class="d-flex col-10 justify-content-between">
              <div class="conversation-card-info">
                <%= link_to conversation_path(conversation) do %>
                <h2> <%= conversation.receiver.name %> </h2>
                  <p><i><%= conversation.messages.last.content %></i></p>
                  <% end %>
              </div>
              <div class="conversation-message d-flex align-items-center">
                <p><i><%= conversation.messages.last.created_at.strftime("%A, %b %d") %></i></p>
              </div>
            </div>
            </div>
          <% else %>
                <div class="row">
                  <div class="col-2 d-flex align-items-center">
                    <div class="conversation-card-avatar">
                      <%= link_to buddy_request_profile_path(conversation.buddy_request_id, conversation.sender) do %>
                      <%= cl_image_tag conversation.sender.photo.key, class: "avatar"%>
                      <% end %>
                    </div>
                  </div>
                  <div class="d-flex col-10 justify-content-between">
                  <div class="conversation-card-info">
                    <%= link_to conversation_path(conversation) do %>
                    <h2> <%= conversation.sender.name %></h2>
                    <p><i><%= conversation.messages.last.content %></i></p>
                    <% end %>
                  </div>
                <div class="conversation-message d-flex align-items-center">
                  <p><i><%= conversation.messages.last.created_at.strftime("%A, %b %d") %></i></p>
                </div>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  <% else %>
    <h1> Create a Buddy Request and start chatting!</h1>
  <% end %>
</div>


